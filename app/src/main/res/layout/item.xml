<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:focusable="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/item_click"
            style="@style/RippleStyleMainColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleRoundedCorners="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="15">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="8.0"
                    android:contentDescription="@string/photo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/newspaper"
                    app:riv_corner_radius_top_right="20dp"
                    app:riv_corner_radius_top_left="20dp"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="clamp" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2.0"
                    android:hint="@string/adress"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_subject"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="4.0"
                    android:hint="@string/hint_of_subject"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/item"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="9">

                    <ImageButton
                        android:id="@+id/more_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="1.5"
                        android:padding="13dp"
                        android:background="@color/transparent"
                        android:contentDescription="@string/more"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_action_more_horiz"
                        android:tint="@color/background" />


                    <TextView
                        android:id="@+id/item_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="3.5"
                        android:hint="@string/date"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_writer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:hint="@string/writer_name"
                        android:textColor="@color/background"
                        android:textColorHint="@color/background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />


                </LinearLayout>


            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>