<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/gold</item>
        <item name="actionMenuTextColor">@color/gold</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="CircularReveal" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="HintTextLogin" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/item</item>
        <item name="android:textColorHint">@color/dark_whit</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="ToolbarSubTitel" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/dark_whit</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="HintTextRegister" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/item</item>
        <item name="android:textColorHint">@color/dark_whit</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="collapsing_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:fontFamily">@font/lemonada</item>
    </style>

    <style name="RippleStyleLight">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/whit</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="RippleStyleDark">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/black</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="RippleStyleMainColor">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/background</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
