<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/gold</item>
    </style>



    <style name="Textbox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/gold</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintTextLogin" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/whit</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="ToolbarTitel" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="ToolbarSubTitel" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/whit</item>
    </style>

    <style name="HintTextRegister" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/whit</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="RippleStyleLight" >
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/darkWhit</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="RippleStyleDark">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/black</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>
    <style name="RippleStyleMainColor">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/background</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
